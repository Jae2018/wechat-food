/* pages/details/details.wxss */

#view {
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
}

#v2 {
  width: 25%;
  text-align: center;
}

#v3 {
  font-size: 11px;
}

.scroll {
  display: flex;
  white-space: nowrap;
  height: 10rem;
}

#v1 {
  display: inline-block;
  margin-left: 0.5rem;
  margin-right: 0.5rem;
  color: rgba(80, 80, 80, 1);
  background-color: rgba(208, 208, 208, 1);
  text-align: inherit;
}

.footer {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 3rem;
  background: #eee;
  text-align: center;
}

.footer-left {
  background: #999;
  width: 60%;
  line-height: 3rem;
  align-items: center;
  justify-content: center;
  display: flex;
}

.footer-right {
  background: #808080;
  width: 40%;
  text-align: center ;
  line-height: 3rem;
}
